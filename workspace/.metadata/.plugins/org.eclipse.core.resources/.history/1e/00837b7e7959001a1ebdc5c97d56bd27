package primero;

public class EjemploVariables {

	public static void main(String[] args) {
		// ejemplo de declaracion, inicializacion y uso de variables
		int numero=10; //variable entera de valor 10
		int numeroa, numerob;
		double numeroDecimal=30.5;
		String nombre="Ángel";
		
		//operaciones con variables
		numeroa=numero*10;
		
		System.out.println("Mi nombre es "+nombre);
		System.out.println("El número inicial es "+numero);
		System.out.println("El valor inicial es "+numeroDecimal);
		System.out.println("El vaor final es "+numeroa)

	}

}
